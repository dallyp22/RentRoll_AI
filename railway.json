{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd apps/api && npm install",
    "watchPatterns": ["apps/api/**"]
  },
  "deploy": {
    "startCommand": "cd apps/api && npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  }
} 